<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/page"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/white"
                android:elevation="8dp"
                android:orientation="vertical"
                android:padding="1.7dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="#f2f2f2">

        <RelativeLayout
            android:id="@+id/lyt_img"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="107.3dp"
            android:layout_marginTop="47.6dp"
            android:paddingEnd="10.7dp"
            android:paddingStart="11.4dp">

            <ProgressBar
                android:id="@+id/progressBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerInParent="true"
                android:layout_centerVertical="true"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="20dp"
                android:visibility="gone"/>

            <ImageView
                android:id="@+id/img_discount"
                android:layout_width="300dp"
                android:layout_height="400dp"
                android:layout_centerInParent="true"
                android:scaleType="centerCrop"/>

            <TextView
                android:id="@+id/txt_loading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerInParent="true"
                android:layout_centerVertical="true"
                android:textSize="30sp"
                android:text="Loading..."/>

        </RelativeLayout>


        <TextView
            android:id="@+id/txt_promotion_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/lyt_img"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="-9dp"
            android:layout_marginEnd="18.6dp"
            android:background="#3d8dde"
            android:gravity="center_vertical"
            android:paddingBottom="2.3dp"
            android:paddingLeft="11.3dp"
            android:paddingRight="11.3dp"
            android:paddingTop="1.6dp"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textSize="10.4sp"/>

        <RelativeLayout
            android:id="@+id/lyt_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="11dp"
            android:layout_marginEnd="15.3dp"
            android:layout_marginStart="17dp"
            android:layout_marginTop="45dp">


            <RelativeLayout
                android:id="@+id/lyt_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/txt_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="text"
                    android:textSize="16sp"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/lyt_title">

                <TextView
                    android:id="@+id/txt_distance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="9dp"
                    android:text="text"
                    android:textSize="14sp"/>

                <TextView
                    android:id="@+id/txt_subscribe"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@id/txt_distance"
                    android:layout_alignParentEnd="true"
                    android:paddingBottom="10dp"
                    android:paddingStart="10dp"
                    android:paddingTop="10dp"
                    android:text="подписать"
                    android:textAllCaps="false"
                    android:textSize="13sp"/>
            </RelativeLayout>
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>